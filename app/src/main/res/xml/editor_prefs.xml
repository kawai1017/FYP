<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/app_Settings">
        <ListPreference
            android:defaultValue="@string/editor_font_size_default"
            android:entries="@array/font_size"
            android:entryValues="@array/font_size"
            android:key="fontsize"
            android:summary="@string/font_size_sum"
            android:title="@string/font_size" />

        <ListPreference
            android:defaultValue="@string/editor_text_language_default"
            android:entries="@array/text_language"
            android:entryValues="@array/text_language"
            android:key="lang"
            android:summary="@string/text_language_sum"
            android:title="@string/text_language" />

        <ListPreference
            android:defaultValue="@string/editor_audio_language_default"
            android:entries="@array/audio_language"
            android:entryValues="@array/audio_language"
            android:key="audiolang"
            android:summary="@string/audio_language_sum"
            android:title="@string/audio_language"
            />

    </PreferenceCategory>
</PreferenceScreen>