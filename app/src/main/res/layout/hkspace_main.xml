<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HKSPACE_MainActivity"
    android:background="@drawable/demo4">
	<include layout="@layout/toolbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <Button
            android:text="@string/hkspace_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hkspacemuseum_about_us_default"
            android:layout_weight="0.05"
            android:onClick="onClick"
            android:background="@color/white" />

        <Button
            android:text="@string/hkspace_exhibit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hkspacemuseum_exhibit_default"
            android:background="@color/white"
            android:layout_weight="0.05" />

        <Button
            android:text="@string/hkspace_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hkspacemuseum_transport_default"
            android:background="@color/white"
            android:layout_weight="0.05" />

    </LinearLayout>

</RelativeLayout>
